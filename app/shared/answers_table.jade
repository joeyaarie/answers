.headers(layout="column")
  .table-header(flex layout="rows" layout-align="space-between")
    md-button.tool(aria-label="" flex ng-click="newLookUpTable()" ng-disabled="false")
      i.mdi.mdi-table-large
    md-button.tool(aria-label="" flex ng-click="importLookUpTable()" ng-disabled="false")
      i.mdi.mdi-import
    md-button.tool(aria-label="" flex ng-click="saveSession()" ng-disabled="false")
      i.mdi.mdi-content-save-all
    md-button.tool(aria-label="" flex ng-click="deleteSession()" ng-disabled="false")
      i.mdi.mdi-delete
    //- .tool.dropdown(flex ng-click="exportTable()" ng-disabled="false" layout-align="space-between" layout="row")
      label Export:
      select(ng-model="selectedOption")
        option(ng-value="")
        option(ng-value="option" ng-repeat="option in exportOptions") {{ option.name }}
      i.mdi.mdi-export(ng-disabled="!selectedOption")
    md-button.tool(aria-label="" flex ng-click="exportTable()" ng-disabled="false")
     i.mdi.mdi-export()

    
  .table-patterns(layout="row")
    table()
      thead()
        tr()
          th() 
          th() A    
          th() B    
          th() C        
          th() D   
      |     
      tbody()
        tr.table-rows(ng-repeat="rows in lookUpTable" ng-click="editThisLookUpTableRow(rows, $index)")
          td.table-cell(layout="row")
            //- i.mdi.mdi-close-circle(ng-click="removeLookUpRow($index)")
            | {{$index +1}}
          td.table-cell(ng-repeat="cell in rows") {{cell}} 
    .result-tables(ng-repeat="table in resultsTable")
      .table-lines
        table
          i.mdi.mdi-close-circle(ng-click="removeFromResultsTable($index)")
          thead()
            tr()
              th() {{table.name}}    
          |     
          tbody()
            tr(ng-repeat="cell in table.data")
              td.table-cell() {{cell}} 

    md-table-pagination(md-limit='query.limit', md-limit-options='[5, 10, 15]', md-page='query.page', md-total='{{desserts.count}}', md-on-paginate='getDesserts', md-page-select='')

